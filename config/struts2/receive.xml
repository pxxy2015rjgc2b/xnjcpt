<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="receive" namespace="/receive" extends="struts-default">
			<interceptors>
			<interceptor name="sessionout" class="com.xnjcpt.interceptor.AjaxUserLogin"></interceptor>
			<interceptor-stack name="mystack">
				<interceptor-ref name="defaultStack" />
				<!-- 权限拦截 <interceptor-ref name="authority" /> -->
				<!-- session拦截 -->
				<interceptor-ref name="sessionout" />
			</interceptor-stack>
		</interceptors>
		<action name="receive_*" class="com.xnjcpt.action.receive.ReceiveAction"
			method="{1}">
			<interceptor-ref name="mystack"></interceptor-ref>
		</action>
	</package>
</struts>
