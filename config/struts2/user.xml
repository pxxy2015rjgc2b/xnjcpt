<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="user" namespace="/user" extends="struts-default">
		<action name="user_*" class="com.xnjcpt.action.user.UserAction"
			method="{1}">
			
			<result name="into_activate" type="redirectAction">user_activate</result>
			<!--用户邮箱激活跳转页面-->
			<result name="activate_success">/error.jsp</result>
			<result name="activate_error">/login.jsp</result>
			
		</action>
	</package>
</struts>
